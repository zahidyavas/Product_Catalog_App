@model IEnumerable<Product>
@{
    ViewData["Title"] = "Home Page";
}

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th style="width: 100px">@Html.DisplayNameFor(m => m.ProductId)</th> @* Products.cs dosyasında [Display(Name)] içine yazılan değeri getirir. *@
            <th style="width: 100px">@Html.DisplayNameFor(m => m.Image)</th>
            <th>@Html.DisplayNameFor(m => m.Name)</th>
            <th style="width: 130px">@Html.DisplayNameFor(m => m.Price)</th>
            <th style="width: 150px"></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.ProductId</td>
                <td><img src="~/img/@item.Image" alt="" class="img-fluid"/></td>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>
                    <a href="" class="btn btn-sm btn-primary">Edit</a>
                    <a href="" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>